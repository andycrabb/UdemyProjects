<% include partials/header %>

<header class="container">
    <div class="jumbotron text-center">
      <h1 class="display-3">Welcome To YelpCamp</h1>
      <p class="lead">Here you will find some of the best camping spots from around the globe!</p>
      <hr class="my-4">
      <p>These campgrounds are chosen by you!  Please enter your favourite site below: </p>
      <p class="lead">
        <a class="btn btn-primary btn-lg" href="/new" role="button">Enter a new site!</a>
      </p>
</header>
<div class="container">
    <div class="wrapper">
        <% campgrounds.forEach(function(camp){ %>
            <div class="thumbs">
                 <img src="<%= camp.image %>"></img>
                    <h4> <%= camp.name %> </h4>
            </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>

